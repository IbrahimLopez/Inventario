@model IEnumerable<Inventario.Models.Tabla_Intermedia_Proveen>

@{
    ViewBag.Title = "Proveen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container form-group"></div>

<div class="form-group container">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Proveen</h3>
        </div>
        <div class="panel-body">
            <!-- Table -->
            <table class="table table-responsive table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tabla_Productos.nombreProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tabla_Proveedores.nombreProveedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fechaProveen)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tabla_Productos.nombreProducto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tabla_Proveedores.nombreProveedor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fechaProveen)
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.proveenID }) |
                                @Html.ActionLink("Detalles", "Details", new { id = item.proveenID }) |
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.proveenID })
                            </td>
                        }
                       
                    </tr>
                }

            </table>

        </div>
    </div>
</div>

<div class="col-md-6 form-group container">
    @Html.ActionLink("Crear nuevo registro", "Create", null, htmlAttributes: new { @class = "btn btn-info" })
    @Html.ActionLink("Generar PDF", "GeneratePDF", null, htmlAttributes: new { @class = "btn btn-info" })
</div>




